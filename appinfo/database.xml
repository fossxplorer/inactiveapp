<database>
    <name>*dbname*</name>
    <create>true</create>
    <overwrite>false</overwrite>
    <charset>utf8</charset>
    <table>
        <name>*dbprefix*inactiveapps_apps</name>
        <declaration>
            <field>
                <name>id</name>
                <type>integer</type>
                <notnull>true</notnull>
                <autoincrement>true</autoincrement>
                <unsigned>true</unsigned>
                <primary>true</primary>
                <length>8</length>
            </field>
            <field>
                <name>app_id</name>
                <type>text</type>
                <length>256</length>
                <notnull>false</notnull>
            </field>
            <field>
                <name>user_id</name>
                <type>text</type>
                <default></default>
                <notnull>true</notnull>
                <length>64</length>
            </field>
            <field>
                <name>last_access</name>
                <type>integer</type>
                <length>8</length>
                <default>0</default>
                <notnull>false</notnull>
                <unsigned>true</unsigned>
            </field>

            <index>
                <name>inactiveapps_app_user</name>
                <field>
                    <name>app_id</name>
                </field>
                <field>
                    <name>user_id</name>
                </field>
            </index>

            <index>
                <name>inactiveapps_app</name>
                <field>
                    <name>app_id</name>
                </field>
            </index>
        </declaration>
    </table>
</database>
